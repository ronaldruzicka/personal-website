---
import { css } from '../../styled-system/css';
---

<div
  class={css({
    position: 'absolute',
    bottom: 50,
    left: '50%',
    transform: 'translateX(-50%)',

    width: '32px',
    height: '46px',

    border: '3px solid token(colors.foreground)',
    borderRadius: '20px',

    '&::before': {
      content: '""',
      position: 'absolute',
      top: '10px',
      left: '50%',
      translate: '-50% 0',

      width: '6px',
      height: '6px',
      backgroundColor: 'token(colors.foreground)',
      borderRadius: '50%',

      animation: 'scrollDown 1.7s ease-in-out infinite forwards',
    },
  })}
>
</div>
